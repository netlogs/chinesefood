---
import { Picture } from "astro:assets";
import heroImage from "assets/chinese-food.jpg";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon/components";
---

<main
  class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24 bg-gradient-to-br from-bg-primary to-bg-accent">
  <div class="py-6 md:order-1 hidden md:block">
    <Picture
      src={heroImage}
      alt="Chinese Food Showcase"
      widths={[200, 400, 600]}
      sizes="(max-width: 800px) 100vw, 620px"
      loading="eager"
      format="avif"
    />
  </div>
  <div>
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
      <span class="gradient-text">The meaning</span> of life is eat food.
    </h1>
    <p class="text-lg mt-4 text-text-secondary max-w-xl">
      All Chinese food, all satisfying.
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        href="/best-chinese-food"
        class="btn btn-primary">
        Explore Best Chinese Food
      </Link>
      <Link
        href="/city-guides"
        class="btn btn-secondary">
        City Guides
      </Link>
    </div>
  </div>
</main>
